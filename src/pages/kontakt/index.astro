---
import Layout from '../../layouts/Layout.astro';
---

<Layout 
  title="Kontakt | Art Kuchnie Toruń - Kuchnie na wymiar"
  description="Skontaktuj się z Art Kuchnie w Toruniu. Bezpłatna wycena kuchni na wymiar. Zadzwoń 576 376 567 lub napisz."
  canonical="https://artkuchnie.pl/kontakt/"
>

  <section class="page-header">
    <div class="container">
      <span class="page-header__label">Skontaktuj się</span>
      <h1 class="page-header__title">Kontakt</h1>
      <p class="page-header__subtitle">
        Masz pytania dotyczące kuchni na wymiar? Chcesz umówić się na bezpłatną wycenę? 
        Skontaktuj się z nami – chętnie pomożemy.
      </p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-form-wrapper">
          <h2>Wyślij wiadomość</h2>
          <p class="contact-form-intro">
            Opisz swoją wizję kuchni, a my przygotujemy dla Ciebie bezpłatną wycenę. 
            Możesz załączyć zdjęcia pomieszczenia lub inspiracje.
          </p>
          
          <form class="contact-form" id="contactForm">
            <div class="form-group">
              <label for="name">Imię i nazwisko *</label>
              <input type="text" id="name" name="name" required placeholder="Jan Kowalski">
            </div>
            
            <div class="form-row">
              <div class="form-group">
                <label for="email">Adres e-mail *</label>
                <input type="email" id="email" name="email" required placeholder="jan@example.pl">
              </div>
              <div class="form-group">
                <label for="phone">Telefon</label>
                <input type="tel" id="phone" name="phone" placeholder="500 000 000">
              </div>
            </div>
            
            <div class="form-group">
              <label for="subject">Temat</label>
              <select id="subject" name="subject">
                <option value="wycena">Bezpłatna wycena kuchni</option>
                <option value="projekt">Projekt kuchni</option>
                <option value="wizyta">Umówienie wizyty w showroomie</option>
                <option value="inne">Inne pytanie</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="message">Wiadomość *</label>
              <textarea id="message" name="message" rows="6" required placeholder="Opisz swoją wizję kuchni - wymiary pomieszczenia, preferowany styl, materiały, budżet..."></textarea>
            </div>

            <!-- UPLOAD ZDJĘĆ -->
            <div class="form-group">
              <label>Załącz zdjęcia (opcjonalnie)</label>
              <div class="upload-zone" id="uploadZone">
                <input type="file" id="fileInput" multiple accept="image/*" hidden>
                <div class="upload-zone__content">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                    <polyline points="17 8 12 3 7 8"/>
                    <line x1="12" y1="3" x2="12" y2="15"/>
                  </svg>
                  <p>Przeciągnij zdjęcia lub <span class="upload-link">wybierz pliki</span></p>
                  <small>Maksymalnie 5 zdjęć, do 10MB każde</small>
                </div>
              </div>
              <div class="upload-preview" id="uploadPreview"></div>
              <div class="upload-progress" id="uploadProgress" hidden>
                <div class="upload-progress__bar"></div>
                <span class="upload-progress__text">Przesyłanie zdjęć...</span>
              </div>
            </div>
            
            <div class="form-group form-checkbox">
              <input type="checkbox" id="privacy" name="privacy" required>
              <label for="privacy">
                Wyrażam zgodę na przetwarzanie moich danych osobowych w celu odpowiedzi na zapytanie. 
                <a href="/polityka-prywatnosci/">Polityka prywatności</a>
              </label>
            </div>
            
            <button type="submit" class="btn btn--primary btn--full" id="submitBtn">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/></svg>
              <span>Wyślij wiadomość</span>
            </button>
          </form>

          <!-- Status messages -->
          <div class="form-status form-status--success" id="formSuccess" hidden>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
            <div>
              <strong>Wiadomość wysłana!</strong>
              <p>Dziękujemy za kontakt. Odpowiemy w ciągu 24 godzin.</p>
            </div>
          </div>

          <div class="form-status form-status--error" id="formError" hidden>
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/></svg>
            <div>
              <strong>Wystąpił błąd</strong>
              <p id="errorMessage">Spróbuj ponownie lub zadzwoń do nas.</p>
            </div>
          </div>
        </div>
        
        <div class="contact-info">
          <div class="contact-info-card">
            <h3>Dane kontaktowe</h3>
            
            <div class="contact-info-item">
              <div class="contact-info-icon">
                <svg viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
              </div>
              <div>
                <strong>Telefon</strong>
                <a href="tel:+48576376567">576 376 567</a>
              </div>
            </div>
            
            <div class="contact-info-item">
              <div class="contact-info-icon">
                <svg viewBox="0 0 24 24"><path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4-8 5-8-5V6l8 5 8-5v2z"/></svg>
              </div>
              <div>
                <strong>E-mail</strong>
                <a href="mailto:kontakt@artkuchnie.pl">kontakt@artkuchnie.pl</a>
              </div>
            </div>
            
            <div class="contact-info-item">
              <div class="contact-info-icon">
                <svg viewBox="0 0 24 24"><path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/></svg>
              </div>
              <div>
                <strong>Adres</strong>
                <span>ul. Polna 134, hala nr 3<br>87-100 Toruń</span>
              </div>
            </div>
            
            <div class="contact-info-item">
              <div class="contact-info-icon">
                <svg viewBox="0 0 24 24"><path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/></svg>
              </div>
              <div>
                <strong>Godziny otwarcia</strong>
                <span>Poniedziałek - Piątek: 8:00 - 17:00<br>Sobota: po umówieniu</span>
              </div>
            </div>
          </div>
          
          <div class="contact-info-card">
            <h3>Dane firmy</h3>
            <p>
              <strong>Art Kuchnie</strong><br>
              NIP: 9562111620<br>
              REGON: 389437853
            </p>
          </div>
          
          <div class="contact-info-card contact-info-card--accent">
            <h3>Bezpłatna wycena</h3>
            <p>
              Zadzwoń lub napisz, opisz swoją wizję kuchni, a przygotujemy dla Ciebie 
              indywidualną, bezpłatną wycenę. Bez żadnych zobowiązań.
            </p>
            <a href="tel:+48576376567" class="btn btn--white">
              Zadzwoń teraz
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section section--alt">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Lokalizacja</span>
        <h2 class="section-title">Jak do nas trafić?</h2>
        <p class="section-subtitle">
          Nasz showroom i zakład produkcyjny znajduje się w Toruniu przy ulicy Polnej 134, hala nr 3.
        </p>
      </div>
      
      <div class="map-wrapper">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2432.123456789!2d18.6!3d53.02!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNTPCsDAxJzEyLjAiTiAxOMKwMzYnMDAuMCJF!5e0!3m2!1spl!2spl!4v1234567890"
          width="100%" 
          height="450" 
          style="border:0; border-radius: 12px;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade">
        </iframe>
      </div>
    </div>
  </section>

</Layout>

<script>
  const CLOUDINARY_CLOUD_NAME = "drpll3ho2";
  const CLOUDINARY_UPLOAD_PRESET = "artkuchnie";
  const LAMBDA_ENDPOINT = "https://API_GATEWAY_ID.execute-api.eu-central-1.amazonaws.com/prod/contact";
  const MAX_FILES = 5;
  const MAX_FILE_SIZE = 10 * 1024 * 1024; // 10MB

  let uploadedImages: string[] = [];

  const form = document.getElementById('contactForm') as HTMLFormElement;
  const uploadZone = document.getElementById('uploadZone')!;
  const fileInput = document.getElementById('fileInput') as HTMLInputElement;
  const uploadPreview = document.getElementById('uploadPreview')!;
  const uploadProgress = document.getElementById('uploadProgress')!;
  const submitBtn = document.getElementById('submitBtn')!;
  const formSuccess = document.getElementById('formSuccess')!;
  const formError = document.getElementById('formError')!;

  // Upload zone click
  uploadZone.addEventListener('click', () => fileInput.click());

  // Drag & drop
  uploadZone.addEventListener('dragover', (e) => {
    e.preventDefault();
    uploadZone.classList.add('upload-zone--dragover');
  });

  uploadZone.addEventListener('dragleave', () => {
    uploadZone.classList.remove('upload-zone--dragover');
  });

  uploadZone.addEventListener('drop', (e) => {
    e.preventDefault();
    uploadZone.classList.remove('upload-zone--dragover');
    const files = e.dataTransfer?.files;
    if (files) handleFiles(files);
  });

  // File input change
  fileInput.addEventListener('change', () => {
    if (fileInput.files) handleFiles(fileInput.files);
  });

  async function handleFiles(files: FileList) {
    const filesToUpload = Array.from(files).slice(0, MAX_FILES - uploadedImages.length);
    
    for (const file of filesToUpload) {
      if (file.size > MAX_FILE_SIZE) {
        alert(`Plik ${file.name} jest za duży (max 10MB)`);
        continue;
      }
      
      if (!file.type.startsWith('image/')) {
        alert(`Plik ${file.name} nie jest obrazem`);
        continue;
      }

      await uploadToCloudinary(file);
    }
  }

  async function uploadToCloudinary(file: File) {
    uploadProgress.hidden = false;
    
    const formData = new FormData();
    formData.append('file', file);
    formData.append('upload_preset', CLOUDINARY_UPLOAD_PRESET);
    formData.append('folder', 'artkuchnie-kontakt');

    try {
      const response = await fetch(
        `https://api.cloudinary.com/v1_1/${CLOUDINARY_CLOUD_NAME}/image/upload`,
        { method: 'POST', body: formData }
      );

      if (!response.ok) throw new Error('Upload failed');

      const data = await response.json();
      uploadedImages.push(data.secure_url);
      
      // Add preview
      const preview = document.createElement('div');
      preview.className = 'upload-preview__item';
      preview.innerHTML = `
        <img src="${data.secure_url}" alt="Podgląd">
        <button type="button" class="upload-preview__remove" data-url="${data.secure_url}">×</button>
      `;
      uploadPreview.appendChild(preview);

      // Remove handler
      preview.querySelector('.upload-preview__remove')?.addEventListener('click', (e) => {
        const url = (e.target as HTMLElement).dataset.url!;
        uploadedImages = uploadedImages.filter(u => u !== url);
        preview.remove();
      });

    } catch (error) {
      console.error('Upload error:', error);
      alert('Błąd podczas przesyłania zdjęcia');
    } finally {
      uploadProgress.hidden = true;
    }
  }

  // Form submit
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    submitBtn.setAttribute('disabled', 'true');
    submitBtn.innerHTML = '<span class="spinner"></span> Wysyłanie...';
    formSuccess.hidden = true;
    formError.hidden = true;

    const formData = {
      name: (document.getElementById('name') as HTMLInputElement).value,
      email: (document.getElementById('email') as HTMLInputElement).value,
      phone: (document.getElementById('phone') as HTMLInputElement).value,
      subject: (document.getElementById('subject') as HTMLSelectElement).value,
      message: (document.getElementById('message') as HTMLTextAreaElement).value,
      images: uploadedImages
    };

    try {
      const response = await fetch(LAMBDA_ENDPOINT, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(formData)
      });

      if (!response.ok) throw new Error('Send failed');

      form.reset();
      uploadedImages = [];
      uploadPreview.innerHTML = '';
      formSuccess.hidden = false;
      form.style.display = 'none';

    } catch (error) {
      console.error('Submit error:', error);
      formError.hidden = false;
    } finally {
      submitBtn.removeAttribute('disabled');
      submitBtn.innerHTML = `
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/></svg>
        <span>Wyślij wiadomość</span>
      `;
    }
  });
</script>

<style>
  /* Existing styles... */
  .contact-grid {
    display: grid;
