  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px rgba(201, 162, 39, 0.1);
  }
  
  .form-group textarea {
    resize: vertical;
    min-height: 150px;
  }
  
  .form-checkbox {
    flex-direction: row;
    align-items: flex-start;
    gap: 0.75rem;
  }
  
  .form-checkbox input {
    width: 20px;
    height: 20px;
    margin-top: 2px;
    flex-shrink: 0;
  }
  
  .form-checkbox label {
    font-weight: 400;
    font-size: 0.875rem;
    color: var(--color-text-light);
    line-height: 1.5;
  }
  
  .form-checkbox a {
    color: var(--color-accent);
  }
  
  .btn--full {
    width: 100%;
    padding: 1rem;
  }

  /* Upload styles */
  .upload-zone {
    border: 2px dashed var(--color-border);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    cursor: pointer;
    transition: var(--transition);
