import { useRef, useEffect, useState } from "react";
import { ChevronLeft, ChevronRight, X, ZoomIn, ZoomOut } from "lucide-react";

interface ImageModalProps {
  isOpen: boolean;
  onClose: () => void;
  images: string[];
  currentIndex: number;
  onNavigate: (index: number) => void;
  categoryName?: string;
}

export default function ImageModal({
  isOpen,
  onClose,
  images,
  currentIndex,
  onNavigate,
  categoryName,
}: ImageModalProps) {
  const [scale, setScale] = useState(1);
  const [isControlsVisible, setIsControlsVisible] = useState(true);
  const thumbnailsRef = useRef<HTMLDivElement>(null);

  useEffect(() => {
    if (!isOpen) return;
    const handleKey = (e: KeyboardEvent) => {
      if (e.key === "ArrowLeft")
        onNavigate(currentIndex > 0 ? currentIndex - 1 : images.length - 1);
      if (e.key === "ArrowRight")
        onNavigate(currentIndex < images.length - 1 ? currentIndex + 1 : 0);
      if (e.key === "Escape") onClose();
    };
    window.addEventListener("keydown", handleKey);
    document.body.style.overflow = "hidden";
    return () => {
      window.removeEventListener("keydown", handleKey);
      document.body.style.overflow = "unset";
    };
  }, [isOpen, currentIndex, images.length]);

  useEffect(() => {
    let timeout: NodeJS.Timeout;
    const handleActivity = () => {
      setIsControlsVisible(true);
      clearTimeout(timeout);
      timeout = setTimeout(() => setIsControlsVisible(false), 3000);
    };
    window.addEventListener("mousemove", handleActivity);
    return () => {
      window.removeEventListener("mousemove", handleActivity);
      clearTimeout(timeout);
    };
  }, []);

  useEffect(() => {
    setScale(1);
  }, [currentIndex]);

  if (!isOpen) return null;

  const handlePrev = () =>
    onNavigate(currentIndex > 0 ? currentIndex - 1 : images.length - 1);
  const handleNext = () =>
    onNavigate(currentIndex < images.length - 1 ? currentIndex + 1 : 0);

  return (
    <div
      style={{
        position: "fixed",
        inset: 0,
        zIndex: 9999,
        background: "rgba(0,0,0,0.95)",
      }}
      onClick={(e) => e.target === e.currentTarget && onClose()}
    >
      {/* Controls */}
      <div
        style={{
          position: "absolute",
          top: "16px",
          right: "16px",
          display: "flex",
          gap: "8px",
          zIndex: 50,
          opacity: isControlsVisible ? 1 : 0,
          transition: "opacity 0.3s",
        }}
      >
        <button
          onClick={() => setScale((s) => Math.max(s - 0.5, 1))}
          style={{
            background: "rgba(255,255,255,0.1)",
            border: "none",
            borderRadius: "8px",
            padding: "8px",
            cursor: "pointer",
            color: "#fff",
          }}
        >
          <ZoomOut size={24} />
        </button>
        <button
          onClick={() => setScale((s) => Math.min(s + 0.5, 3))}
          style={{
            background: "rgba(255,255,255,0.1)",
            border: "none",
            borderRadius: "8px",
            padding: "8px",
            cursor: "pointer",
            color: "#fff",
          }}
        >
          <ZoomIn size={24} />
        </button>
        <button
          onClick={onClose}
          style={{
            background: "rgba(255,255,255,0.1)",
            border: "none",
            borderRadius: "8px",
            padding: "8px",
            cursor: "pointer",
            color: "#fff",
          }}
        >
          <X size={28} />
        </button>
      </div>

      {/* Counter */}
      <div
        style={{
          position: "absolute",
          top: "16px",
          left: "16px",
          color: "#fff",
          background: "rgba(0,0,0,0.5)",
          padding: "8px 16px",
          borderRadius: "20px",
          opacity: isControlsVisible ? 1 : 0,
          transition: "opacity 0.3s",
        }}
      >
        {categoryName && `${categoryName} - `}
        {currentIndex + 1} / {images.length}
      </div>

      {/* Image */}
      <div
        style={{
          width: "100%",
          height: "100%",
          display: "flex",
          alignItems: "center",
          justifyContent: "center",
          padding: "80px 64px 140px",
        }}
      >
        <button
          onClick={handlePrev}
          style={{
            position: "absolute",
            left: "16px",
            top: "50%",
            transform: "translateY(-50%)",
            background: "rgba(255,255,255,0.1)",
            border: "none",
            borderRadius: "50%",
            width: "56px",
            height: "56px",
            cursor: "pointer",
            color: "#fff",
            opacity: isControlsVisible ? 1 : 0,
            transition: "opacity 0.3s",
          }}
        >
          <ChevronLeft size={32} />
        </button>

        <img
          src={images[currentIndex]}
          alt=""
          style={{
            maxWidth: "100%",
            maxHeight: "calc(100vh - 220px)",
            objectFit: "contain",
            transform: `scale(${scale})`,
            transition: "transform 0.3s",
          }}
          draggable={false}
        />

        <button
          onClick={handleNext}
          style={{
            position: "absolute",
            right: "16px",
            top: "50%",
            transform: "translateY(-50%)",
            background: "rgba(255,255,255,0.1)",
            border: "none",
            borderRadius: "50%",
            width: "56px",
            height: "56px",
            cursor: "pointer",
            color: "#fff",
            opacity: isControlsVisible ? 1 : 0,
            transition: "opacity 0.3s",
          }}
        >
          <ChevronRight size={32} />
        </button>
      </div>

      {/* Thumbnails */}
      <div
        style={{
          position: "absolute",
          bottom: "16px",
          left: "50%",
          transform: "translateX(-50%)",
          display: "flex",
          alignItems: "center",
          gap: "8px",
          opacity: isControlsVisible && scale === 1 ? 1 : 0,
          transition: "opacity 0.3s",
        }}
      >
        <button
          onClick={() =>
            thumbnailsRef.current?.scrollBy({ left: -100, behavior: "smooth" })
          }
          style={{
            background: "none",
            border: "none",
            color: "#fff",
            cursor: "pointer",
            padding: "8px",
          }}
        >
          <ChevronLeft size={24} />
        </button>
        <div
          ref={thumbnailsRef}
          style={{
            display: "flex",
            gap: "8px",
            padding: "8px",
            background: "rgba(0,0,0,0.5)",
            borderRadius: "8px",
            overflowX: "auto",
            maxWidth: "70vw",
            scrollbarWidth: "none",
          }}
        >
          {images.map((img, i) => (
            <button
              key={i}
              onClick={() => onNavigate(i)}
              style={{
                flexShrink: 0,
                width: "80px",
                height: "60px",
                borderRadius: "4px",
                overflow: "hidden",
                border:
                  currentIndex === i
                    ? "2px solid #c9a227"
                    : "2px solid transparent",
                cursor: "pointer",
                padding: 0,
                background: "none",
              }}
            >
              <img
                src={img}
                alt=""
                style={{ width: "100%", height: "100%", objectFit: "cover" }}
              />
            </button>
          ))}
        </div>
        <button
          onClick={() =>
            thumbnailsRef.current?.scrollBy({ left: 100, behavior: "smooth" })
          }
          style={{
            background: "none",
            border: "none",
            color: "#fff",
            cursor: "pointer",
            padding: "8px",
          }}
        >
          <ChevronRight size={24} />
        </button>
      </div>
    </div>
  );
}
